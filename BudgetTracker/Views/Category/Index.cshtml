@model IEnumerable<BudgetTracker.Models.Category>

@{
    ViewData["Title"] = "Categories";
    var currentFilter = ViewData["CurrentFilter"] as CategoryType?;
}

<h1>Categories</h1>

<form asp-action="Index" method="get" class="mb-4">
    <div class="form-group">
        <label for="typeFilter" class="control-label">Filter by type:</label>
        <select name="typeFilter" id="typeFilter" class="form-control" onchange="this.form.submit()">
            <option value="">All Categories</option>
            <option value="Income" selected="@(currentFilter == CategoryType.Income)">Income</option>
            <option value="Expense" selected="@(currentFilter == CategoryType.Expense)">Expense</option>
        </select>
    </div>
</form>

<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-primary">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CategoryId" class="btn btn-primary">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-primary">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

